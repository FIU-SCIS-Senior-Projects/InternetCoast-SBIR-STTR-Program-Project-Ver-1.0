@model IEnumerable<InternetCoast.Model.Entities.Fund>

@{
    ViewBag.Title = "SBIR-STTR Programs";
}

<div class="row">
    <div class="col-lg-5">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
        <h4 class="panel-title">
            SBIR-STTR Programs
        </h4>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Solicitation</th>
                <th>Title</th>
                <th>Topic</th>
                <th>Agency</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
                {
                    foreach (var fund in Model)
                    {
            <tr>
                <td><a href="@fund.Url">@fund.Solicitation</a></td>
                <td>@fund.FundTitle</td>
                <td>@fund.FundTopic</td>
                <td>@string.Join(", ", fund.Agencies.Select(a => a.Acronym ?? a.AgencyName))</td>
            </tr>
                    }
                }
                else
                {
            <tr>
                <td colspan="4">
                    <div class="alert alert-warning" role="alert">No records found!</div>
                </td>
            </tr>
                }
        </tbody>
    </table>
</div>