@model InternetCoast.Model.Entities.Fund

@{
    ViewBag.Title = "AddCompetitiveProgram";
}

<h3>Add Competitive Program</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Competitive Event</label>
            <div class="col-sm-10">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FundTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FundTitle, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Original Post Url</label>
            <div class="col-sm-10">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Topic</label>
            <div class="col-sm-10">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FundTopic, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FundTopic, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Elegibility</label>
            <div class="col-sm-10">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Elegibility, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Elegibility, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Total Awards($millions)</label>
            <div class="col-sm-10">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Awards, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Awards, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">DeadLine</label>
            <div class="col-sm-10">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DeadLine, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DeadLine, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
